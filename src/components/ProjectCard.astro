---
interface Props {
	title: string;
	description: string;
	href?: string;
}

const { title, description, href = "#" } = Astro.props;
---

<div class="border border-[var(--border-main)] p-6 rounded-lg hover:bg-[var(--bg-muted)] transition-colors">
	<h3 class="text-xl font-serif font-medium mb-2">{title}</h3>
	<p class="opacity-80 mb-4">{description}</p>
	<a href={href} class="hover:underline decoration-1 underline-offset-2 font-medium italic">View Project &rarr;</a>
</div>
